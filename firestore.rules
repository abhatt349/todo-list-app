rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow signup and login queries
    match /users/{userId} {
      allow read, create: if true;
      // Don't allow updates or deletes to user documents
      allow update, delete: if false;
    }

    // Todos collection - allow all operations
    // Note: Without server-side auth, client validates userId
    match /todos/{todoId} {
      allow read, write: if true;
    }
  }
}
